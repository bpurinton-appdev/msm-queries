<h1>
  Director #<%= @id %> details
</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @image %>>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@created) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@updated) %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_films.each do |film| %>
    <tr>
      <td>
        <%= film.id %>
      </td>
      <td>
        <img src="<%= film.image %>">
      </td>
      <td>
        <%= film.title %>
      </td>
      <td>
        <%= film.year %>
      </td>
      <td>
        <%= @name %>
      </td>
      <td>
        <a href="/movies/<%= film.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
