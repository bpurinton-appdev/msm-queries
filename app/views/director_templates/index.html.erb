<h1>List of all directors</h1>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Name
    </th>
    <th>
      Dob
    </th>
    <th>
      Bio
    </th>
  </tr>
  <% @list_of_directors.each do |director| %>
    <tr>
      <td>
        <%= director.id %>
      </td>
      <td>
        <img src="<%= director.image %>">
      </td>
      <td>
        <%= director.name %>
      </td>
      <td>
        <%= director.dob %>
      </td>
      <td>
        <a href="/directors/<%= director.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<hr>

<h1>Add a new director</h1>
<form action="/insert_director">
  <div>
    <label for="name">
      Name 
    </label>
    <input id="name" type="text", name="input_name">
  </div>

  <div>
    <label for="dob">
      Dob
    </label>
    <input id="dob" type="date", name="input_dob">
  </div>

  <div>
    <label for="bio">
      Bio
    </label>
    <textarea id="bio" name="input_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="image">
      Image
    </label>
    <input id="image" type="text", name="input_image">
  </div>

  <div>
    <button>
      Create director
    </button>
  </div>
</form>
